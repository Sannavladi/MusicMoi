{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.roles, {
            label: 'Roles',
            multiple: true,
            choices: {
                'ROLE_USER': 'User',
                'ROLE_ADMIN': 'Admin'
            }
        }) }}
        {{ form_row(registrationForm.pseudo) }}
        {{ form_row(registrationForm.firstName) }}
        {{ form_row(registrationForm.lastName) }}
        {{ form_row(registrationForm.country) }}
        {{ form_row(registrationForm.birthday) }}
        {{ form_row(registrationForm.imageName) }}
        {{ form_row(registrationForm.updatedAt) }}
        {{ form_row(registrationForm.slug) }}

        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}

